{
  "typeCheckingMode": "basic",
  "pythonVersion": "3.13",
  "pythonPlatform": "Linux",
  "venvPath": ".",
  "venv": ".venv",
  "useLibraryCodeForTypes": true,
  "include": ["src", "tests"],
  "exclude": [
    ".git",
    ".venv",
    ".ruff_cache",
    ".pytest_cache",
    "docs/**",
  ],
  "extraPaths": [
    ".",
    "src",
    "tests",
    "mkdocs_gen"
  ],
  "executionEnvironments": [
    {
      "root": "src",
      "extraPaths": [
        ".",
        "src",
        "tests",
        "mkdocs_gen"
      ],
      "pythonVersion": "3.13"
    },
    {
      "root": "tests",
      "extraPaths": [
        ".",
        "src",
        "tests",
      ],
      "pythonVersion": "3.13"
    },
    {
      "root": "mkdocs_gen",
      "extraPaths": [
        ".",
        "src"
      ],
      "pythonVersion": "3.13"
    }
  ]
}
